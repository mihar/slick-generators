!!! strict
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }/
    %title= yield(:title) || "APPTITLE"
    = stylesheet_link_tag "application"
    / = javascript_include_tag :all
    = yield :head
  %body{body_attrs}
    = render :partial => "layouts/admin_gate"
    #wrap
      #head
        %h1= link_to "APPTITLE", root_path
        #menu
          %ul
            %li= link_to "Domov", root_path          
        %br
          
      #content
        - flash.each do |name, msg|
          = content_tag :div, msg, :class => 'flash', :id => "flash_#{name}"
        = yield
    #foot
      %p.copyright 
        Vse pravice pridr≈æane &mdash; &copy;
        = Time.now.strftime('%Y')
        Lorem ipsum d.o.o.
    %br
